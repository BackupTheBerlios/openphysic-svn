\newcommand{\grillenotationadmin}[1]{%
  \noindent
  \begin{pspicture}(60,-0.5)(80,0.5)
    % \psgrid[subgriddiv=1,griddots=10]
    \psset{xunit=2}
    \psset{yunit=1}
    \psline(30,0)(40,0)
    \multido{\n=30+1}{11}{%
      \rput(\n,0.25){$\n$}
      \psline(\n,-0.1)(\n,0.1)
    }
    \multido{\n=30+1}{10}{%
      \psline[linewidth=0.1pt](\n,0)(\n,-16)
      \rput(0.5,0){\psline[linewidth=0.1pt,linestyle=dashed](\n,0)(\n,-16)}
    }
    \psline[linewidth=0.1pt](40,0)(40,-16)
    #1
  \end{pspicture}
}

\def\note(#1){%
  \pscircle*(#1,0){0.1}
  \rput(#1,0.25){$#1$}
}

\def\noteproposee(#1){%
  \pscircle(#1,0){0.1}
  \rput(#1,0.25){$#1$}
}

\def\noteperequee(#1){%
  \pscircle*(#1,0){0.1}
  \rput(#1,0.25){$#1$}
}

\newcommand{\grillereference}[3]{%
  % echelle
  \psline[linewidth=0.5pt](#1,0)(#3,0)
  % borne inf
  \psline[linewidth=1pt](#1,-0.1)(#1,0.1) 
  \rput(#1,-0.25){$#1$}
  % borne mediane
  \psline[linewidth=1pt](#2,-0.1)(#2,0.1) 
  \rput(#2,-0.25){$#2$}
  % borne sup
  \psline[linewidth=1pt](#3,-0.1)(#3,0.1)
  \rput(#3,-0.25){$#3$}
}

\newcommand{\noteadmin}[9]{%
  % % #1 : Année 1 - Année 2
  % % #2 : Corps (professeur agrégé)
  % % #3 : Echelon
  % % #4 : Classe
  % % #5 : Note proposée
  % % #6 : Note péréquée
  % % #7 : Grille 1
  % % #8 : Grille 2
  % % #9 : Grille 3
  \addtocounter{cntadmin}{1}
  \rput(0,-\value{cntadmin}){%
    \grillereference{#7}{#8}{#9}
    \noteproposee(#5)
    \noteperequee(#6)
    % affichage (année, corps, classe, échelon)
    \rput(29,0.25){\tiny #1}
    \rput(29,0){\tiny #2 #3\ieme echelon}
    \rput(29,-0.25){\tiny #4}
  }
}

