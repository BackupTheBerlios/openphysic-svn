 ( COUNTRY => COUNTRY , REGION => REGION , LOCAL => LOCAL ) ;    end BUILD ;    function COUNTRY ( FROM : NUMBER ) return STRING is    begin        return IMAGE ( FROM . COUNTRY ) ;    end COUNTRY ;    function IMAGE ( FROM : COUNTRY_TYPE ) return STRING is    begin        FIXED_CHECK ( FROM ) ;        return FIXED_IMAGE ( FROM ) ;    end IMAGE ;    function REGION ( FROM : NUMBER ) return STRING is    begin        return IMAGE ( FROM . REGION ) ;    end REGION ;    function IMAGE ( FROM : REGION_TYPE ) return STRING is    begin        FIXED_CHECK ( FROM ) ;        return FIXED_IMAGE ( FROM ) ;    end IMAGE ;    function LOCAL ( FROM : NUMBER ) return STRING is    begin        return IMAGE ( FROM . LOCAL ) ;    end LOCAL ;    function IMAGE ( FROM : LOCAL_TYPE ) return STRING is    begin        FIXED_CHECK ( FROM ) ;        return FIXED_IMAGE ( FROM ) ;    end IMAGE ;    function NORMAL  ( FROM : NUMBER ) return STRING is    begin        return '+' & IMAGE ( FROM . COUNTRY ) &               '(' & IMAGE ( FROM . REGION  ) &               ')' & IMAGE ( FROM . LOCAL   ) ;    end NORMAL ;end PHONE . NUMBERS . SPECIFIC ;