 type COUNTRY_TYPE is new FIXED_STRING ( COUNTRY_SIZE ) ;    type REGION_TYPE  is new FIXED_STRING ( REGION_SIZE  ) ;    type LOCAL_TYPE   is new FIXED_STRING ( LOCAL_SIZE   ) ;    type NUMBER is record        COUNTRY : COUNTRY_TYPE ;        REGION  : REGION_TYPE  ;        LOCAL   : LOCAL_TYPE   ;    end record ;end PHONE . NUMBERS . SPECIFIC ;